<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CPIS_358_Project</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CPIS_358_Project.styles.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CyberSafe</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
				aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Assessment">Awareness Test</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Resources">Resources</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Password_Checker">Password Checker</a>
					</li>
					<li class="nav-item">
						<a class="nav-link btn btn-primary text-white" asp-controller="Account"
							asp-action="Login">Login</a>
					</li>
				</ul>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted mt-auto py-3">
		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<h5>CyberSafe</h5>
				</div>
				<div class="col-md-4">
					<h5>Quick Links</h5>
					<ul class="list-unstyled">
						<li><a asp-controller="Home" asp-action="Index">Home</a></li>
						<li><a asp-controller="Home" asp-action="Assessment">Awareness Test</a></li>
						<li><a asp-controller="Home" asp-action="Resources">Resources</a></li>
						<li><a asp-controller="Home" asp-action="Password_Checker">Password Checker</a></li>
					</ul>
				</div>
				<div class="col-md-4">
					<h5>Contact</h5>
					<a asp-controller="Home" asp-action="ContactUs">Contact Us</a>
				</div>
			</div>
			<div class="text-center pt-3">
				&copy; 2025 CyberSafe. All rights reserved.
			</div>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
