@model CPIS_358_Project.Models.RegisterViewModel
<!DOCTYPE html>
<html>
    <head>
        <link href="../css/mainstyle.css" rel="stylesheet" type="text/css">
        <link href="../css/style.css" rel="stylesheet" type="text/css">
        <script src="../js/include_header_and_footer.js"></script>
    </head>
    <body>
        <div id="header"></div>
        <div class="login light_shadow">
            <form class="login sign_up rounded_corners" method="post" asp-action="Register" asp-controller="Account">
                @Html.AntiForgeryToken()
                <input asp-for="Username" type="text" placeholder="Username">
				<span asp-validation-for="Username" class="text-danger"></span>
                <input asp-for="Password" type="password" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <label>
                    I agree to <a href="https://secure.endless.horse">the terms and agreements</a>.
				</label>
                <input type="checkbox" required>
                <br>
                <br>
                <button class="submit-login">Sign up</button>
            </form>
        </div>
        <div id="footer"></div>
    </body>
</html>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}